@model SearchQueryProductDTO // Declara el modelo esperado para esta vista
@{
    // Obtiene el valor de CountRow de la ViewBag
    int totalRegistros = (int)ViewBag.CountRow;
    // Calcula el número total de páginas
    int totalPaginas = 1;
}
<h4>Buscar Cliente</h4>
<hr />
<div class="row">
    <form asp-action="Index">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="SendRowCount" type="hidden" id="txtSendRowCount" />
        <input asp-for="Skip" type="hidden" id="txtSkip" />
        <input name="CountRow" value="@totalRegistros" type="hidden" />
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="NombreNARA_Like" class="control-label"></label>
                    <input asp-for="NombreNARA_Like" class="form-control" />
                    <span asp-validation-for="NombreNARA_Like" class="text-danger"></span>
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="DescripcionNARA_Like" class="control-label"></label>
                    <input asp-for="DescripcionNARA_Like" class="form-control" />
                    <span asp-validation-for="DescripcionNARA_Like" class="text-danger"></span>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <input type="submit" id="btnSearch" value="Buscar" class="btn btn-primary" />
                    <a asp-action="Create" class="btn btn-primary">Ir Crear</a>
                </div>
            </div>
        </div>
        <br />
    </form>
</div>
<script>
    function paginacion(li) {
        const skip = li.getAttribute("data-skip");
        const btnSearch = document.getElementById("btnSearch");
        const txtSkip = document.getElementById("txtSkip");
        const txtSendRowCount = document.getElementById("txtSendRowCount");
        txtSkip.value = skip;
        txtSendRowCount.value = 1;
        btnSearch.click();
    }
</script>
